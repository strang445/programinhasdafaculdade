#include <stdio.h>

// Função que calcula o valor da função matemática f(x) = x^2 + 2x + 1
double funcao_matematica(double x) {
    return x * x + 2 * x + 1;
}

int main() {
    double x;

    // Solicita o valor de x ao usuário
    printf("Digite o valor de x: ");
    scanf("%lf", &x);

    // Calcula o valor da função matemática
    double resultado = funcao_matematica(x);

    // Exibe o resultado
    printf("O valor da função f(x) = x^2 + 2x + 1 para x = %.2f é: %.2f\n", x, resultado);

    return 0;
}
